[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501, F401
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    tools,
    installers

per-file-ignores =
    main.py: E402
    tests/test_utils.py: E402
    plugins/builtin/automation_plugin.py: E402,E129,E128,F811,E722
    opentiler/main_window.py: F541
    opentiler/formats/freecad_handler.py: F821
